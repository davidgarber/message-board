<h1>{{question}}</h1>
<h3>Description: {{description}}</h3>
<h2>Authored by: {{author}}</h2>

{{#if isEditing}}
<form>
  <div class="form-group">
    <label for="question">Question</label>
    {{input id="question" class="form-control" value=question}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{input id="description" class="form-control" value=description}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input id="author" class="form-control" value=author}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>

{{else}}
  <p>
    {{question}}
  </p>

  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
  <button class="btn btn-danger" {{action 'delete'}}>Delete</button>

  {{/if}}

<h2>Answers</h2>


<ul>
{{#each answer in this.answers}}
  {{#link-to 'answer' this.id}}{{answer.answer}}{{/link-to}}
{{/each}}
</ul>

<p>
  {{#link-to 'new-answer' this.id class="btn btn-primary"}}New Answer{{/link-to}}
</p>

{{outlet}}
